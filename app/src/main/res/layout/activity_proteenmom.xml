    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FE7F9C"
    tools:context=".proteenmom">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:shownWeekCount="3"
        android:maxDate="31">

    </CalendarView>

    <TextView
        android:id="@+id/txtPreg"
        android:text="อายุครรภ์"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/calendar"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/rsuregular"/>

    <TextView
        android:id="@+id/hintPreg"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/calendar"
        android:layout_toRightOf="@+id/txtPreg"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/rsuregular"/>

    <TextView
        android:id="@+id/txtWeek"
        android:text="สัปดาห์"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/calendar"
        android:layout_toRightOf="@id/hintPreg"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/rsuregular"/>

    <TextView
        android:id="@+id/hintDay"
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/calendar"
        android:layout_toRightOf="@id/txtWeek"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/rsuregular"/>

    <TextView
        android:id="@+id/txtDay"
        android:text="วัน"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/calendar"
        android:layout_toRightOf="@id/hintDay"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/rsuregular"/>

    <ImageView
        android:id="@+id/img_baby"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txtPreg"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btnRecomend"
        android:text="คำแนะนำ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="#1023E3"
        android:layout_below="@+id/img_baby"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rsubold"
        />

