<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recommend3"
    android:background="#FE7F9C">

    <ImageView
        android:id="@+id/img_recommend"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/warning"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@id/txt_recommend2"
        />

    <TextView
        android:id="@+id/txt_recommend2"
        android:text="คำแนะนำ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/rsuregular"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/hint_recommend"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_recommend"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FE7F9C"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TableLayout
                    android:fontFamily="@font/rsuregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    // Row1
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:weightSum="1"
                        android:layout_weight="0.33">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_news"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentLeft="true"
                                card_view:cardBackgroundColor="@color/white">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/img_newspaper"
                                        android:layout_width="wrap_content"
                                        android:layout_height="37dp"
                                        android:src="@drawable/newspaper"
                                        android:layout_marginTop="3dp"/>

                                    <TextView
                                        android:id="@+id/txt_news"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ประชาสัมพันธ์"
                                        android:fontFamily="@font/rsuregular"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:layout_below="@id/img_newspaper"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_note"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentLeft="true"
                                card_view:cardBackgroundColor="@color/white">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/img_note"
                                        android:layout_width="wrap_content"
                                        android:layout_height="37dp"
                                        android:src="@drawable/note"
                                        android:layout_marginTop="3dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="บันทึกกิจกรรม"
                                        android:fontFamily="@font/rsuregular"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:layout_below="@id/img_note"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_symptom"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentLeft="true"
                                card_view:cardBackgroundColor="@color/white">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/img_file"
                                        android:layout_width="wrap_content"
                                        android:layout_height="37dp"
                                        android:src="@drawable/file"
                                        android:layout_marginTop="3dp"/>

                                    <TextView
                                        android:id="@+id/txt_symptom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="อาการ"
                                        android:fontFamily="@font/rsuregular"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:layout_below="@id/img_file"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <android.support.v7.widget.CardView
                                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_chat"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_alignParentLeft="true"
                                card_view:cardBackgroundColor="@color/white">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/img_chat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="37dp"
                                        android:src="@drawable/chat"
                                        android:layout_marginTop="3dp"/>

                                    <TextView
                                        android:id="@+id/txt_chat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ปรึกษาแพทย์"
                                        android:fontFamily="@font/rsuregular"
                                        android:textSize="15sp"
                                        android:textColor="@color/black"
                                        android:layout_below="@id/img_chat"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </TableRow>

                </TableLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>